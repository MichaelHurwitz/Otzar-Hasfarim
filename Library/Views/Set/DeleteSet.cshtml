@model Library.Models.SetModel
@{
    ViewData["Title"] = "Delete Set";
    var shelfId = ViewBag.ShelfId;
}

<h1>Delete Set</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Set</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Set Name
        </dt>
        <dd class="col-sm-10">
            @Model.SetName
        </dd>
    </dl>

    <form asp-action="DeleteSet">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-shelfId="@Model.ShelfId">Back to List</a>
    </form>
</div>
