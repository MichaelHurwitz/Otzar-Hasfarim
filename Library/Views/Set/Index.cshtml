@model IEnumerable<Library.Models.SetModel>
@{
    ViewData["Title"] = "Sets";
    var shelfId = ViewBag.ShelfId;
}

<h1>Sets</h1>

<table class="table">
    <thead>
        <tr>
            <th>Set Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var set in Model)
        {
            <tr>
                <td>@set.SetName</td>
                <td>
                    @Html.ActionLink("Edit", "EditSet", new { id = set.Id }) |
                    @Html.ActionLink("Delete", "DeleteSet", new { id = set.Id }) |
                    @Html.ActionLink("View Books", "Index", "Book", new { setId = set.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddSet" asp-route-shelfId="@shelfId" class="btn btn-primary">Add New Set</a>
