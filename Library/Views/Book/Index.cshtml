@model IEnumerable<Library.Models.BookModel>
@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

@if (ViewBag.WarningMessage != null)
{
    <div class="alert alert-warning">@ViewBag.WarningMessage</div>
}

<p>
    <a asp-action="AddBook" asp-route-setId="@ViewBag.SetId">Add New Book</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Height</th>
            <th>Width</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Height)</td>
                <td>@Html.DisplayFor(modelItem => item.Width)</td>
                <td>
                    <a asp-action="EditBook" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DeleteBook" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
