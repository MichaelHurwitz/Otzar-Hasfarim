@model Library.Models.ShelfModel
@{
    ViewData["Title"] = "Delete Shelf";
        var libraryId = ViewBag.LibraryId;
}

<h1>Delete Shelf</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Shelf</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Hight
        </dt>
        <dd class="col-sm-10">
            @Model.Height
        </dd>
        <dt class="col-sm-2">
            Width
        </dt>
        <dd class="col-sm-10">
            @Model.Width
        </dd>
    </dl>

    <form asp-action="DeleteShelf">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-libraryId="@Model.LibraryId">Back to List</a>
    </form>
</div>
